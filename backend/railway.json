{
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"
    },
    "commands": [
      "pip install -r requirements.txt",
      "python manage.py collectstatic --no-input",
      "python manage.py migrate --noinput"
    ]
  },
  "deploy": {
    "startCommand": "gunicorn core.wsgi:application --bind 0.0.0.0:$PORT"
  }
}