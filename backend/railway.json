{
  "build": {
    "env": {
      "PYTHONUNBUFFERED": "1"
    },
    "commands": [
      "pip install -r backend/requirements.txt",
      "python backend/manage.py collectstatic --no-input",
      "python backend/manage.py migrate --noinput"
    ]
  },
  "deploy": {
    "startCommand": "gunicorn backend.core.wsgi:application --bind 0.0.0.0:$PORT"
  }
}